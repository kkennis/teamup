<main>

  <% unless session[:user_id] %>
    <h1>Team Up: Your Personal Sports News Manager</h1>
    <h3>To get started, sign up, log in, or view our list of sports</h3>
  <% else %> 
    <h1>Browse Sports</h1>
  <% end %>

  <ul>
    <% @sports.each do |sport| %>
      <li><a href=<%= "/sports/#{sport.id}" %>><%= sport.name.capitalize %></a></li>
    <% end %>
  </ul>

</main>